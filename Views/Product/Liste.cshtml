@model ProductVM

@{
    ViewData["Title"] = "Liste";
}

<h1>Liste</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.Supplier.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.Discontinued)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.plist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discontinued)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.ProductId  }) |
                @Html.ActionLink("Update", "Update", new {  id=item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.ProductId })
            </td>
        </tr>
}
    </tbody>
</table>
